@model TeknolojiKovaniWebApi.Domain.Users.DTOs.External.Users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TeknojiKovan - Login</title>
    
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

</head>
<body>
    <div class="col-lg-4 col-lg-offset-4 margint100px table-bordered padding10px"> 
        <div class="giris-ekrani-baslik">
            <center>Teknoloji Kovan</center>
        </div>
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <table class="table giris-ekrani">
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <td><input type="text" class="form-control" name="UserName" id="UserName" /></td>
                    </tr>
                    <tr>
                        <th>Şifre</th>
                        <td><input type="password" class="form-control" name="Password" id="Password" /></td>
                    </tr>
                    <tr>                       
                        <td colspan="2"><center><input type="submit" class="btn btn-default" name="btn-giris" id="btn-giris" value="Gönder" /></center></td>
                    </tr>
                </table>
            }
        </div>
    </div>
</body>
</html>
