        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlarmType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Max)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Min)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PinNo)
        </td>
        <td>
